<div class="row">  
  <div class="col-md-5 col-sm-6 col-xs-12">
    <div class="artpost">
      <div class="card">
        <div class="card-heading text-center">
          <%= @artpost_user.name %>画伯の絵
        </div>
        <div class="card-body">
          <%= image_tag @artpost.artimage.thumb.url, class: "img-responsive center-block" %>
          <div class="buttons text-center">
            <p><%= render 'favorites/favorite_button', artpost: @artpost %></p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-4 col-sm-6 col-xs-12">
    <div class="artpost-users">
      <div class="card">
        <div class="card-heading text-center">
          いいねしたユーザ
        </div>
        <div class="card-body">
          <% @like_users.each do |user| %>
            <%= link_to user.name, user_path(user) %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>