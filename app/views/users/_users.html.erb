<% if users.any? %>
	<ul class="media-list">
		<% users.each do |user| %>
			<li class="media">
				<div class="media-left">
					###
				</div>
				<div class="media-body">
					<div>
						<%= link_to user.name, user_path(user) %>
					</div>
					<div>
						自己紹介
						<p><%= user.introduction %></p>
					</div>
				</div>
			</li>
		<% end %>
	</ul>
	<%= paginate users %>
<% end %>