<div class="text-center">
  <h2>プロフィール編集</h2>
</div>
<%= form_for(@user) do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
<div class="row">
  <aside class="col-md-4">
    <div class="card">
	  	<div class="card-title">
				<h3><%= @user.name %></h3>
	  	</div>
	  	<div class="card-body">
  	    <%= f.label 'サムネイル編集（画像クリック）' %>
      	  <div class="field image">
      	    <div id="img_field" onClick="$('#file').click()">
          		<% if @user.image.present? %>
          		  <%= image_tag @user.image.url, class: "media-object img-responsive" %>
          		<% else %>
          		  <%= image_tag "/icon.png" %>
          		<% end %>
        		</div>
      		</div>
      	<%= f.file_field :image, class: "image", style: "display:none", id: "file" %>
	  	</div>
    </div>
  </aside>
	<div class="col-md-8">
			<div class="form-group">
				<%= f.label :name, 'name' %>
				<%= f.text_field :name, class: "form-control" %>
			</div>
	
			<div class="form-group">
				<%= f.label :instagram_url, 'instagram(URL)' %>
				<%= f.text_field :instagram_url, class: 'form-control' %>
			</div>
			
			<div class="form-group">
				<%= f.label :twitter_url, 'twitter(URL)' %>
				<%= f.text_field :twitter_url, class: 'form-control' %>
			</div>
	
			<div class="form-group">
				<%= f.label :facebook_url, 'facebook(URL)' %>
				<%= f.text_field :facebook_url, class: 'form-control' %>
			</div>
		
			<div class="form-group">
				<%= f.label :introduction, '自己紹介' %><br>
				<%= f.text_area :introduction, class: 'form-control' %>
			</div>
		
		<%= f.submit '更新する', class: 'btn btn-primary btn-center col-md-3' %>
	
		
		<% end %>
	</div>
</div>