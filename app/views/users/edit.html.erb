<div class="text-center">
  <h1>プロフィール編集</h1>
</div>

<div class="row">
  <%= form_for(@user) do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
  <aside class="col-sm-4">
    <div class="panel panel-default">
	  	<div class="panel-heading">
				<h3 class="panel-title"><%= @user.name %></h3>
	  	</div>
	  	<div class="panel-body">
  	    <%= f.label 'サムネイル編集（画像クリック）' %>
      	  <div class="field image">
      	    <div id="img_field" onClick="$('#file').click()">
          		<% if @user.image.present? %>
          		  <%= image_tag @user.image.url, class: "media-object img-responsive" %>
          		<% else %>
          		  <%= image_tag "/icon.png" %>
          		<% end %>
        		</div>
      		</div>
      	<%= f.file_field :image, class: "image", style: "display:none", id: "file" %>
	  	</div>
    </div>
  </aside>
	<div class="col-sm-8">
		<div class="form-group">
			<%= f.label :name, 'name' %>
			<%= f.text_field :name, class: 'form-control' %>
		</div>
		
		<div class="form-group">
			<%= f.label :instagram_url, 'instagram' %>
			<%= f.text_field :instagram_url, class: 'form-control' %>
		</div>
		
		<div class="form-group">
			<%= f.label :twitter_url, 'twitter' %>
			<%= f.text_field :twitter_url, class: 'form-control' %>
		</div>
		
		<div class="form-group">
			<%= f.label :facebook_url, 'facebook' %>
			<%= f.text_field :facebook_url, class: 'form-control' %>
		</div>
		
		<div class="form-group">
			<%= f.label :introduction, '自己紹介' %>
			<%= f.text_area :introduction, class: 'form-control' %>
		</div>
			
		<%= f.submit "更新する", class: 'btn btn-primary' %>
		<% end %>
	</div>
</div>