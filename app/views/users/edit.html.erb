<div class="text-center">
  <h1>プロフィール編集</h1>
</div>

<div class="row">
  <%= form_for(@user) do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
  <aside class="col-xs-4">
    <div class="panel panel-default">
	  <div class="panel-heading">
		<h3 class="panel-title"><%= @user.name %></h3>
	  </div>
	  <div class="panel-body">
		  <img class="media-object img-rounded img-responsive" src="<%= @user.image %>" width="150" alt="">
	  	<div class="form-group">
		 	 <%= f.label :image, 'アイコン画像' %>
		 	 <%= f.file_field :image %>
	    </div>	
	  </div>
    </div>
  </aside>
	<div class="col-md-6 col-md-offset-3">
		<div class="form-group">
			<%= f.label :name, 'name' %>
			<%= f.text_field :name, class: 'form-control' %>
		</div>
		
			<div class="form-group">
				<%= f.label :instagram_id, 'instagram' %>
				<%= f.text_field :instagram_id, class: 'form-control' %>
			</div>
			
			<div class="form-group">
				<%= f.label :twitter_id, 'twitter' %>
				<%= f.text_field :twitter_id, class: 'form-control' %>
			</div>
			
			<div class="form-group">
				<%= f.label :facebook_id, 'facebook' %>
				<%= f.text_field :facebook_id, class: 'form-control' %>
			</div>
			
			<div class="form-group">
				<%= f.label :introduction, '自己紹介' %>
				<%= f.text_area :introduction, class: 'form-control' %>
			</div>
			
			<%= f.submit "更新する", class: 'btn btn-primary' %>
		<% end %>
	</div>
</div>