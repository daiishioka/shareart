<div class="wrapper">
	<nav id="sidebar">
		<div class="card">
			<% if @user.image.present? %>
				<%= image_tag @user.image.thumb100.url, class: "card-img-top" %>
			<% else %>
			 	<%= image_tag "/icon100×100.png", class: "card-img-top" %>
			<% end %>
			<div class="card-body">
				<div class="card-title">
					<div class="artist-name">
						<h5><%= @user.name %> 画伯</h5>
					</div>
				</div>
				<div class="card-text">
				  <ul>
				    <li>
				      <div class="card-text-name">フォロー</div>
					    <div id="following_count">
						    <%= link_to @user.followings_count, followings_user_path(@user) %>
					    </div>
				    </li>
				    <li>
				      <div class="card-text-name">フォロワー</div>
					    <div id="follower_count">
						    <%= link_to @user.followers_count, followers_user_path(@user) %>
					    </div>
				    </li>
				  </ul>
				  	<div class="sns-icon">
				  		<% if @user.twitter_url.present? %>
					  		<%= link_to @user.twitter_url, target: :_blank do %>
									<i class="btn btn-social-icon btn-twitter rounded-circle p-0"><span class="fab fa-twitter"></span></i>
								<% end %>
							<% end %>
							
							<% if @user.facebook_url.present? %>
								<%= link_to @user.facebook_url, target: :_blank do %>
									<i class="btn btn-social-icon btn-facebook rounded-circle p-0"><span class="fab fa-facebook-f"></span></i>
								<% end %>
							<% end %>
							
							<% if @user.instagram_url.present? %>
								<%= link_to @user.instagram_url, target: :_blank do %>
									<i class="btn btn-social-icon btn-instagram rounded-circle p-0"><span class="fab fa-instagram"></span></i>
								<% end %>
							<% end %>
						</div>
						<div class="edit-button">
			    		<% if current_user == @user %>
			    			<p><%= link_to 'プロフィール編集', edit_user_path(@user), class: "btn btn-light rounded-pill" %></p>
			    		<% end %>
		    		</div>
		    		<div class="introduction">
		    		自己紹介
						<p><%= @user.introduction %></p>
						</div>
			  </div>
			</div>
		</div>
		<%= render 'relationships/follow_button', user: @user %>
	</nav>
	
	<script>
		$(document).ready(function () {

	    $('#sidebarCollapse').on('click', function () {
	        $('#sidebar').toggleClass('active');
	    });

		});
	</script>
</div>

