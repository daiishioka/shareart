<aside class="col-xs-4">
  <div class="panel panel-default">
	  <div class="panel-heading">
	  	<h3 class="panel-title"><%= @user.name %>のアトリエ</h3>
  	</div>
  	<div class="panel-body">
  	  <div class="profile-image">
    		<% if @user.image.present? %>
    		  <%= image_tag @user.image.thumb100.url, class: "media-object img-circle img-responsive" %>
    		<% else %>
    		  <%= image_tag "/icon.png" %>
    		<% end %>
  		</div>
  		<div class="status text-center">
  		  <p><%= @user.name %></p>
  		  <ul>
  		    <li>
  		      <div class="status-label">フォロー</div>
				    <div id="following_count" class="status-value">
					    <%= @count_followings %>
				    </div>
  		    </li>
  		    <li>
  		      <div class="status-label">フォロワー</div>
				    <div id="follower_count" class="status-value">
					    <%= @count_followers %>
				    </div>
  		    </li>
  		  </ul>
  		</div>
  		<ul>
  			<p>instagram: <%= @user.instagram_url %></p>
  			<p>twitter: <%= @user.twitter_url %></p>
  			<p>facebook: <%= @user.facebook_url %></p>
  		<% if current_user == @user %>
  			<p><%= link_to 'プロフィール編集', edit_user_path(@user) %></p>
  		<% end %>
  		</ul>
  	</div>
  </div>
		<%= render 'relationships/follow_button', user: @user %>
</aside>