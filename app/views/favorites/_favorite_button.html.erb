<% if current_user.favorite?(artpost) %>
  <%= form_for(current_user.favorites.find_by(artpost_id: artpost.id), html: { method: :delete }) do |f| %>
    <%= hidden_field_tag :artpost_id, artpost.id %>
    <%= f.submit 'いいね！解除', class: 'btn btn-danger btn-xs' %>
  <% end %>
<% else %>
  <%= form_for(current_user.favorites.build) do |f| %>
    <%= hidden_field_tag :artpost_id, artpost.id %>
    <%= f.submit 'いいね！', class: 'btn btn-primary btn-xs' %>
  <% end %>
<% end %>
